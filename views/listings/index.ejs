<% layout("layouts/boilerplate") %> 

<body>    
    <h2 class="index-heading">Property Listings</h2>

    <div class="listings row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-1 g-6">
        <% listings.forEach( (listing) => { %>
            <a href="/listings/<%= listing._id %>" class="listing-link col">
                <div class="card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.image.filename %>" loading="lazy">
                    <div class="card-body">
                        <h3 class="card-title"><%= listing.title %></h3>
                        <span class="card-text"> &#8377; <%= listing.price.toLocaleString("en-IN") %> / night</span>
                    </div>
                </div>
            </a>
        <% }) %>
    </div>

</body>

