<% layout("layouts/boilerplate") %>

<body>
    <h2>Create New Property Listing</h2>

    <form method="POST" action="/listings" class="listing-form col-12 needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3 mb-sm-4">
            <label for="title" class="form-label">Title:</label>
            <input type="text" id="title" class="form-control" name="listing[title]" placeholder="Enter property title" required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Please enter a valid title.</div>
        </div>

        <div class="mb-3 mb-sm-4">
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" class="form-control" name="listing[description]" placeholder="Enter property description" required></textarea>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Please enter a short description.</div>
        </div>

        <div class="row">
            <div class="mb-3 mb-sm-4 col-md-4">
                <label for="price" class="form-label">Price (&#8377;):</label>
                <input type="number" id="price" class="form-control" name="listing[price]" min="0" placeholder="Enter property price" required>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Please enter a valid price.</div>
            </div>

            <div class="mb-3 mb-sm-4 col-md-8">
                <label for="country" class="form-label">Country:</label>
                <input type="text" id="country" class="form-control" name="listing[country]" placeholder="Enter property country" required>
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Please enter a valid country.</div>
            </div>
        </div>
        
        <div class="mb-3 mb-sm-4">
            <label for="location" class="form-label">Location:</label>
            <input type="text" id="location" class="form-control" name="listing[location]" placeholder="Enter property location" required>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Please enter a valid location.</div>
        </div>

        <div class="mb-4 mb-sm-5">
            <label for="image" class="form-label">Upload Property Image:</label>
            <input type="file" id="image" class="form-control" name="listing[image]">
        </div>

        <div class="row justify-content-center text-center">
            <button type="submit" class="col-3 btn btn-primary listing-form-btn">Create</button>
        </div>

    </form>
</body>